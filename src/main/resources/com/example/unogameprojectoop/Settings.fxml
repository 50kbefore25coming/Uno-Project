<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane prefWidth="1280.0" prefHeight="720.0"
           stylesheets="@menu-style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.unogameprojectoop.controller.SettingsController">

    <VBox alignment="CENTER" maxWidth="600.0" maxHeight="500.0" spacing="25.0" styleClass="settings-panel">

        <Label text="CÀI ĐẶT" styleClass="settings-title" />

        <VBox maxHeight="4.0" prefHeight="4.0" prefWidth="100.0" maxWidth="200.0"
              style="-fx-background-color: #00e676; -fx-background-radius: 10;" />

        <VBox spacing="15.0" alignment="CENTER">
            <Label text="Độ Sáng Màn Hình" styleClass="settings-label" />
            <Slider fx:id="brightnessSlider" blockIncrement="0.1" max="1.0" min="0.2" value="1.0"
                    showTickMarks="false" styleClass="custom-slider" maxWidth="400.0"/>
        </VBox>
        <VBox prefHeight="20.0" />

        <Button mnemonicParsing="false" onAction="#onBackClick" prefWidth="250.0" prefHeight="50.0"
                styleClass="back-btn" text="LƯU &amp; QUAY LẠI">
        </Button>

    </VBox>

    <Pane fx:id="darkOverlay" mouseTransparent="true" style="-fx-background-color: black;" opacity="0.0"/>

</StackPane>